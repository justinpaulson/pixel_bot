<div
  data-controller="countdown"
  data-countdown-started-at-value="<%= round.started_at&.iso8601 %>"
  data-countdown-created-at-value="<%= round.created_at.iso8601 %>"
  data-countdown-duration-value="60"
  data-countdown-interval-value="20"
>
  <div class="relative w-full h-4 bg-gray-200 rounded">
    <div
      data-countdown-target="progressBar"
      class="absolute h-full bg-blue-500 rounded transition-all duration-1000"
      style="width: 100%;"
    ></div>
  </div>
  <div data-countdown-target="timer" class="text-sm mt-1">
    120s remaining
  </div>
</div>

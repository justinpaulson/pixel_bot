<div
  data-controller="countdown"
  data-countdown-started-at-value="<%= round.started_at&.iso8601 %>"
  data-countdown-created-at-value="<%= round.created_at.iso8601 %>"
  data-countdown-duration-value="60"
  data-countdown-interval-value="10"
  class="w-full max-w-xl mx-auto"
>
  <div class="relative w-full h-4 bg-gray-100/50 rounded-md overflow-hidden backdrop-blur-sm">
    <%# Animated gradient background %>
    <div class="absolute inset-0 bg-gradient-to-r from-sky-400 via-blue-400 to-indigo-400 animate-gradient"></div>

    <%# Progress overlay with glass effect %>
    <div
      data-countdown-target="progressBar"
      class="absolute h-full w-full bg-gradient-to-r from-sky-300/80 via-blue-300/80 to-indigo-300/80 rounded-md transition-all duration-1000 backdrop-blur-sm"
      style="width: 100%; box-shadow: inset 0 1px 1px rgba(255,255,255,0.3), 0 1px 2px rgba(0,0,0,0.1)"
    >
      <%# Shine effect %>
      <div class="absolute inset-0 bg-gradient-to-b from-white/20 to-transparent"></div>
    </div>
  </div>

  <div
    data-countdown-target="timer"
    class="text-sm font-medium mt-2 text-right text-gray-600"
  >
    60s remaining
  </div>
</div>
